<!doctype html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <main class="container-fluid">
    <%- include('./partials/navBar.ejs') %>
    <!--Producto-->
    <br><br>
    <section class="row">
      <article class="col-12 col-md-6 mx-auto mt-5 producto">
        <figure class="imagenProducto">
          <img src="/images/motos/<%= miMoto.imagen%>" class="card-img-top w-100 d-block" alt="Moto">
        </figure>
        <% if (miMoto.descuento == 30) { %>
        <img class="descuento" src="/img/promo30.png" alt="Descuento 30%">
        <% } else if(miMoto.descuento == 15){%>
        <img class="descuento" src="/img/promo15.png" alt="Descuento 15%">
        <%}%>
                <div class="card-body">
                  <h5 class="card-title"><%= miMoto.nombre%></h5>
        <h5 class="card-title">$ <%= miMoto.precio %></h5>
        <p class="card-text"><%= miMoto.descripcion %></p>

        </div>
        <div class="d-flex justify-content-center">
          <a href="/products/edit/<%= miMoto.id %> " class="btn btn-info m-1">Editar</a>
          <form action="/products/delete/<%= miMoto.id %>?_method=DELETE
            " method="POST">
            <input type="hidden" name="id" value="<%= miMoto.id %>">
            <button type="submit" class="btn btn-warning m-1">Eliminar</button>
          </form>
          <a href="/products" class="btn btn-danger m-1">Volver</a>
        </div>


      </article>
    </section>
  </main>

</body>

</html>